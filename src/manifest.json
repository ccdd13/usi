{
    "manifest_version": 2,
    "name": "USI-DEVELOPMENT",
    "description": "__MSG_extShortDesc__",
    "default_locale": "de",
    "author": "usi-dev",
    "developer": {
        "name": "usi-dev"
    },
    "version": "###USI-VERSION###",
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*.user.js",
                "*://*/*.user.js?*",
                "file:///*.user.js?*",
                "file:///*.user.js"
            ],
            "js": [
                "js/get_userscript_from_page.js"
            ],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "38": "gui/icon/usi.png"
        },
        "default_title": "USI"
    },
    "options_ui": {
        "open_in_tab": true,
        "page": "gui/options.html"
    },
    "applications": {
        "gecko": {
            "id": "firefox-addon-usi-DEVELOPMENT@jetpack",
            "strict_min_version": "59.0"
        }
    },
    "permissions": [
        "<all_urls>",
        "clipboardRead",
        "clipboardWrite",
        "notifications",
        "storage",
        "unlimitedStorage",
        "tabs",
        "webNavigation"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self';"
}